@page
@model HomeService.Endpoint.Razor.Pages.Users.OrderDetailsModel
@{
    ViewData["Title"] = "جزئیات سفارش";
}
<div class="ads-info">
    <div class="row">
        <div class="col">
            <div class="my-ads section">
                <h2>جزییات سفارش</h2>
                <div class="container-fluid w-100">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>شناسه سفارش</th>
                                <th>سفارش دهنده</th>
                                <th>هوم سرویس</th>
                                <th>تاریخ ثبت درخواست</th>
                                <th>تاریخ اجرا</th>
                                <th>ساعت اجرا</th>
                                <th>وضعیت</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- محتوای جدول اینجا قرار می‌گیرد -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="my-ads section">
                <h2>توضیحات درخواست</h2>
                <div class="container-fluid w-100">
                    <input type="text" class="form-control" style="height: 150px;" disabled value="توضیحات اینجا نوشته می شود این اطالاعات باید از بک دریافت شود">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="my-ads section">
                <h2>تصاویر ثبت شده</h2>
                <div class="container-fluid w-100">
                    <div class="d-flex" style="gap: 10px; width: 100px; height: 105px;">
                        <img src="~/UserTemplate/images/bg/2.jpg" alt="" class="img-fluid">
                        <img src="~/UserTemplate/images/bg/car2.jpg" alt="" class="img-fluid">
                        <img src="~/UserTemplate/images/bg/car3.jpg" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
