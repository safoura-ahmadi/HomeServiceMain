@page
@model IndexModel
@{
	ViewData["Title"] = "خانه ی اصلی";
}

<section id="services-ad" class="clearfix home-three">
	<!-- view-ad -->
	<div id="home-section" class="parallax-section">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<h2>به چه خدماتی نیاز دارید؟</h2>
					<h3>جتسجو میان 100  سرویس خدمات برای شما</h3>
					<div class="ad-btn">
						<button onclick="scrolling()" class="btn btn-primary">مشاهده دسته بندی ها </button>
					</div>
				</div>
				<div class="col-md-6 text-center">
				</div>
			</div><!-- row -->
		</div><!-- contaioner -->
	</div><!-- view-ad -->

	<div class="container">
		<div class="row">
			<!-- banner -->
			<div class="col-sm-12">
				<div class="banner">
					<!-- banner-form -->
					<div class="banner-form banner-form-full">
						<form method="post" asp-page="/SearchIndex">
							<input name="text" type="text" class="form-control" placeholder="عبارت مورد نظر خود را تایپ کنید">
							<button type="submit" class="form-control">جستجو</button>
						</form>
					</div><!-- banner-form -->
				</div>
			</div><!-- banner -->
		</div><!-- row -->

		<div id="selectsection" class="section services">
			<!-- single-service -->
			@foreach(var category in Model.Categories)
			{
				<div class="single-service">
					<div class="services-icon"><img src="~/UserTemplate/images/icon/@category.ImagePath" alt="images" class="img-fluid"></div>
					<h5>@category.Tilte</h5>

					<ul>
						@foreach (var subcategory in category.SubCategories)
						{
							<li><a asp-page="/HomePageSubService" asp-route-id="@subcategory.Id"> @subcategory.Title </a></li>
						}
					</ul>
				</div>

				<!-- single-service -->
				
			}
		
			<!-- single-service -->
			<div class="single-service">
				<div class="services-icon"><img src="~/UserTemplate/images/icon/11.png" alt="images" class="img-fluid"></div>
				<h5>موسیقی و هنر</h5>
				<ul>
					<li><a href="#">درام</a></li>
					<li><a href="#">کیبرد</a></li>
					<li><a href="#">فلوت</a></li>
					<li><a href="#">گیتار</a></li>
					<li><a href="#">باس گیتار</a></li>
				</ul>
			</div><!-- single-service -->
			<!-- single-service -->
			<div class="single-service">
				<div class="services-icon"><img src="~/UserTemplate/images/icon/10.png" alt="images" class="img-fluid"></div>
				<h5>خدمات مراسم عروسی</h5>
				<ul>
					<li><a href="#">مراقبت و علاقه </a></li>
					<li><a href="#">ماه عسل</a></li>
					<li><a href="#">ازدواج</a></li>
					<li><a href="#">قرار</a></li>
					<li><a href="#">دیگر</a></li>
				</ul>
			</div><!-- single-service -->

		</div><!-- services -->
		<!-- featureds -->
		<!-- cta -->
		<div class="cta text-center">
			<div class="row">
				<!-- single-cta -->
				<div class="col-md-4">
					<div class="single-cta">
						<!-- cta-icon -->
						<div class="cta-icon icon-secure">
							<img src="~/UserTemplate/images/icon/13.png"
								 alt="Icon"
								 class="img-fluid" />
						</div>
						<!-- cta-icon -->

						<h4>خدمات متنوع</h4>
						<p>
							لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ،
							و با استفاده از طراحان گرافیک است
						</p>
					</div>
				</div><!-- single-cta -->
				<!-- single-cta -->
				<div class="col-md-4">
					<div class="single-cta">
						<!-- cta-icon -->
						<div class="cta-icon icon-support">
							<img src="~/UserTemplate/images/icon/14.png"
								 alt="Icon"
								 class="img-fluid" />
						</div>
						<h4>امنیت</h4>
						<p>
							لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ،
							و با استفاده از طراحان گرافیک است
						</p>

					</div>
				</div><!-- single-cta -->
				<!-- single-cta -->
				<div class="col-md-4">
					<div class="single-cta">
						<!-- cta-icon -->
						<div class="cta-icon icon-trading">
							<img src="~/UserTemplate/images/icon/15.png"
								 alt="Icon"
								 class="img-fluid" />
						</div>
						<!-- cta-icon -->

						<h4>کارشناسانی خبره</h4>
						<p>
							لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ،
							و با استفاده از طراحان گرافیک است
						</p>
					</div>
					<!-- single-cta -->
				</div><!-- single-cta -->
			</div><!-- row -->
		</div><!-- cta -->

	</div><!-- container -->
</section><!-- services-ad -->

