@page
@model HomeService.Endpoint.Razor.Pages.SearchIndexModel
@{
}
@{
    ViewData["Title"] = "خانه ی اصلی";
}

<section id="services-ad" class="clearfix home-three">
    <!-- view-ad -->
    <div id="home-section" class="parallax-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>به چه خدماتی نیاز دارید؟</h2>
                    <h3>جتسجو میان 100  سرویس خدمات برای شما</h3>
                    <div class="ad-btn">
                        <button onclick="scrolling()" class="btn btn-primary">مشاهده دسته بندی ها </button>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                </div>
            </div><!-- row -->
        </div><!-- contaioner -->
    </div><!-- view-ad -->
    <div class="container">
        <div class="row">
            <!-- banner -->
            <div class="col-sm-12">
                <div class="banner">
                    <!-- banner-form -->
                    <div class="banner-form banner-form-full">
                        <form method="post" asp-page="/SearchIndex">
                            <input name="text" type="text" class="form-control" placeholder="عبارت مورد نظر خود را تایپ کنید">
                            <button type="submit" class="form-control">جستجو</button>
                        </form>
                    </div><!-- banner-form -->
                </div>
            </div><!-- banner -->
        </div><!-- row -->
        <div class="category-info">

            <div class="row">
                <!-- banner -->
                <!-- recommended-ads -->
                @foreach (var item in Model.Subservices)
                {
                    <div class="col-md-8 col-lg-12 mb-1">
                        <div class="section recommended-ads">
                            <!-- featured-top -->
                            <div class="featured-top">
                                <h4>توصیه شده برای شما</h4>
                            </div><!-- featured-top -->
                            <!-- ad-item -->
                            <div class="ad-item row">
                                <!-- item-image -->
                                <div class="item-image-box col-lg-4">
                                    <div class="item-image">
                                        <a href="#"><img src="~/UserTemplate/images/icon/@item.ImagePath" alt="Image" class="img-fluid"></a>
                                    </div><!-- item-image -->
                                </div>

                                <!-- rending-text -->
                                <div class="item-info col-lg-8">
                                    <!-- ad-info -->
                                    <div class="ad-info">
                                        <h4 class="item-title"><a href="#">@item.Title</a></h4>
                                        <div class="item-cat">
                                            <span><a href="#"> @item.CategoryTitle  </a></span> /
                                            <span><a href="#">@item.SubCategoryTitle</a></span>
                                        </div>
                                        <p class="item-title" style="color: black;">@item.Description</p>

                                        <!-- بخش قیمت و دکمه‌ها -->
                                        <div class="mt-5">
                                            <!-- اضافه کردن فاصله از توضیحات -->
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h3 class="item-price mb-0">قیمت پایه :@item.BasePrice تومان </h3>
                                                @if (!User.Identity!.IsAuthenticated)
                                                {
                                                    <a asp-area="Account" asp-page="/Login" class="btn btn-danger round py-1">
                                                        <i class="icon-size-fullscreen"></i>
                                                        ورود به حساب کاربری
                                                    </a>
                                                }
                                                else if (User.IsInRole("Customer"))
                                                {
                                                    <button class="btn btn-success round py-1" data-bs-toggle="modal" data-bs-target="#form-modal">
                                                        <i class="icon-size-fullscreen"></i>
                                                        ثبت سفارش
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- rending-text -->
                            </div><!-- ad-item -->
                        </div><!-- recommended-ads -->
                    </div>

                    <!-- col-md-8 col-lg-12 -->
                }

            </div><!-- row -->
        </div><!-- category-info -->
    </div>
</section><!-- services-ad -->
@section Scripts
{
    <script src="~/UserTemplate/js/jquery.min.js"></script>
    <script src="~/UserTemplate/js/popper.min.js"></script>
    <script src="~/UserTemplate/js/modernizr.min.js"></script>
    <script src="~/UserTemplate/js/bootstrap.min.js"></script>
    <script src="https://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/UserTemplate/js/gmaps.min.js"></script>
    <script src="~/UserTemplate/js/owl.carousel.min.js"></script>
    <script src="~/UserTemplate/js/scrollup.min.js"></script>
    <script src="~/UserTemplate/js/price-range.js"></script>
    <script src="~/UserTemplate/js/jquery.countdown.js"></script>
    <script src="~/UserTemplate/js/custom.js"></script>
    <script src="~/UserTemplate/js/switcher.js"></script>
    <script>
