<!-- BEGIN SIDEBAR -->
@{
    string pishkhan = "";
    string users = "";
    string orders = "";
    string comments = "";
    string categories = "";
    string subcategories = "";
    string subservices = "";



    switch (ViewData["Title"])
    {
        case "پیشخوان":
            pishkhan = "current";
            break;
        case "پیشخوان > مدیریت کتگوری ها":
            categories = "current";
            break;
        case "پیشخوان > مدیریت کامنت ها":
            comments = "current";
            break;
        case "پیشخوان > مدیریت سفارش ها":
            orders = "current";
            break;
        case "پیشخوان > مدیریت سابکتگوری ها":
            subcategories = "current";
            break;
        case "پیشخوان > مدیریت هوم سرویس ها":
            subservices = "current";
            break;
        case "پیشخوان > مدیریت کاربران":
            users = "current";
            break;
        default:
            pishkhan = "current";
            break;

    }
}
<div id="sidebar">
    <div class="sidebar-top">
    </div><!-- /.sidebar-top -->
    <div class="side-menu-container">
        <ul class="metismenu" id="side-menu">
            <li class="open active conditional-bg">
                <a asp-area="Admin" asp-page="../Index" class=@pishkhan>
                    <i class="icon-home"></i>
                    <span>پنل کاربری</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/Orders/Index" asp-page-handler="Orders" class=@orders>
                    <i class="icon-frame"></i>
                    <span> سفارش ها</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/Users/Index" asp-page-handler="Users" class=@users>
                    <i class="icon-eye"></i>
                    <span> مدیریت کاربران</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/Comments/Index" asp-page-handler="Comments" class=@comments>
                    <i class="icon-pie-chart"></i>
                    <span>مدیریت کامنت ها</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/Categories/Index" asp-page-handler="Categories" class=@categories>
                    <i class="fas fa-folder"></i> <!-- آیکون برای مدیریت کتگوری‌ها -->
                    <span>مدیریت کتگوری‌ها</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/SubCategories/Index" asp-page-handler="SubCategories" class=@subcategories>
                    <i class="fas fa-folder-open"></i> <!-- آیکون برای مدیریت سابکتگوری‌ها -->
                    <span>مدیریت سابکتگوری‌ها</span>
                </a>
            </li>
            <li>
            <li>
                <a asp-area="Admin" asp-page="/SubServices/Index" asp-page-handler="SubService" class=@subservices>
                    <i class="icon-layers"></i>
                    <span>مدیریت هوم سرویس</span>
                </a>

            </li>
        </ul><!-- /#side-menu -->
    </div><!-- /.side-menu-container -->
</div><!-- /#sidebar -->
<!-- END SIDEBAR -->           